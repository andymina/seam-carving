{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "lib-debug",
      "displayName": "Library (debug)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "lib-release",
      "displayName": "Library (release)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "unit-test",
      "displayName": "Unit Tests",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "JSON_LIBS": "nlohmann_json::nlohmann_json",
        "GTEST_LIBS": "GTest::gtest_main;GTest::gtest",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "py-debug",
      "displayName": "Python Module (debug)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "PYBIND11_LIBS": "pybind11::lto;pybind11::module",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "py-release",
      "displayName": "Python Module (release)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "PYBIND11_LIBS": "pybind11::lto;pybind11::module",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ]
}
