{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "environment": {
        "VCPKG_ROOT": "./vcpkg"
      },
      "cacheVariables": {
        "OPENCV_LIBS": "opencv_core;opencv_imgcodecs;opencv_highgui;opencv_imgproc",
        "JSON_LIBS": "nlohmann_json::nlohmann_json",
        "GTEST_LIBS": "GTest::gtest_main;GTest::gtest",
        "PLOG_LIBS": "plog::plog",
        "LIBRARY_ROOT_DIR": "${sourceDir}/libseam_carving",
        "LIBRARY_TEST_DIR": "${sourceDir}/tests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "jobs": 8,
      "cleanFirst": true,
      "verbose": true
    },
    {
      "name": "lib-debug",
      "displayName": "Library (debug)",
      "inherits": ["default"],
      "configurePreset": "default",
      "targets": ["seam_carving"]
    },
    {
      "name": "unit-test",
      "displayName": "Unit Tests",
      "inherits": ["default"],
      "configurePreset": "default",
      "targets": [
        "energy_unit"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "execution": {
        "jobs": 8
      }
    },
    {
      "name": "unit",
      "displayName": "Unit Tests",
      "description": "Runs all unit tests",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true,
        "verbosity": "extra"
      }
    }
  ]
}
